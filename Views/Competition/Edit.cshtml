@model discgolf_duels.Models.Competition

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Competition</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CompetitionId" />
            <div class="form-group  mb-2 mt-2">
                <label asp-for="CompetitionName" class="control-label mb-1"></label>
                <input asp-for="CompetitionName" class="form-control" />
                <span asp-validation-for="CompetitionName" class="text-danger"></span>
            </div>
            <div class="form-group  mb-2 mt-2">
                <label asp-for="CourseId" class="control-label mb-1"></label>
                <select asp-for="CourseId" class="form-control" asp-items="ViewBag.CourseId"></select>
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group  mb-2 mt-2">
                <label asp-for="CompetitionDate" class="control-label mb-1"></label>
                <input asp-for="CompetitionDate" class="form-control" />
                <span asp-validation-for="CompetitionDate" class="text-danger"></span>
            </div>
            <div class="form-group mb-2 mt-2">
                <label asp-for="MaxPlayerCount" class="control-label mb-1"></label>
                <input asp-for="MaxPlayerCount" class="form-control" />
                <span asp-validation-for="MaxPlayerCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PublicUserId" type="hidden" class="form-control" asp-items="ViewBag.PublicUserId"/>
                <span asp-validation-for="PublicUserId" class="text-danger"></span>
            </div>
            
            <div class="form-group mb-3 mt-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
