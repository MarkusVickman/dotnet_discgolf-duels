                @Html.DisplayFor(modelItem => item.CompetitionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CompetitionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPlayerCount)
