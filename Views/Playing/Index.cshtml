@model IEnumerable<discgolf_duels.Models.Playing>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Play)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Par)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GroupNr)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.User)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Play.PlayId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Par)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GroupNr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PlayingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.PlayingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.PlayingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
