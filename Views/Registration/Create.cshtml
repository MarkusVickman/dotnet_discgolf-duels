@model discgolf_duels.Models.Registration

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Registration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CompetitionId" class="control-label">@ViewBag.Competition.CompetitionName</label>
                <input asp-for="CompetitionId" type="hidden" class="form-control"
                    value="@ViewBag.Competition.CompetitionId" />
            </div>
            <div class="form-group">
                <input asp-for="PublicUserId" type="hidden" class="form-control" value="@ViewBag.PublicUserId" />
            </div>
            <div class="form-group">
                <label asp-for="RegisterDate" class="control-label"></label>
                <input asp-for="RegisterDate" disabled value="@ViewBag.RegisterDate" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Registrera" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
