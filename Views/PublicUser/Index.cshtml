@model IEnumerable<discgolf_duels.Models.PublicUser>

@{
    ViewData["Title"] = "Public profile";
}

<h1>Public profile</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DisplayName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PDGA_Nr)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DisplayName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PDGA_Nr)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.PublicUserId">Edit</a> |
                <a asp-action="Delete" asp-route-id="@item.PublicUserId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
